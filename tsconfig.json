{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "checkJs": true,
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "*.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "dist",
    "lib"
  ],
}